                    <VisualState.Setters>
                        <Setter Target="buttonRegistracija.Width" Value="70"/>
                        <Setter Target="buttonPrijava.Width" Value="70"/>
                        <Setter Target="buttonRegistracija.Margin" Value="0,20,85,0"/>
                        <Setter Target="Separator.Margin" Value="0,15,65,0"/>
                        <Setter Target="buttonRegistracija.Height" Value="30"/>
