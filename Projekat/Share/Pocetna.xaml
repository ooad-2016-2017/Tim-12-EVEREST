                <VisualState x:Name="PhoneM">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="400"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="buttonRegistracija.Width" Value="70"/>
                        <Setter Target="buttonPrijava.Width" Value="70"/>
                        <Setter Target="buttonRegistracija.Margin" Value="0,20,85,0"/>
                        <Setter Target="Separator.Margin" Value="0,15,65,0"/>
                        <Setter Target="buttonRegistracija.Height" Value="30"/>
                        <Setter Target="buttonPrijava.Height" Value="30"/>
                        <Setter Target="Separator.Height" Value="40"/>
                        <Setter Target="buttonRegistracija.FontSize" Value="10"/>
                        <Setter Target="buttonPrijava.FontSize" Value="10"/>
                        <Setter Target="buttonPretraga.Height" Value="32"/>
                        <Setter Target="textBoxPretraga.Height" Value="30"/>
                        <Setter Target="buttonPretraga.Width" Value="40"/>
                        <Setter Target="buttonPretraga.Margin" Value="230,20,0,0"/>
                        <Setter Target="textBoxPretraga.Width" Value="220"/>
                        <Setter Target="Kategorije.Width" Value="410"/>
                        <Setter Target="Slike.Width" Value="410"/>
                        <Setter Target="Video.Width" Value="410"/>
                        <Setter Target="Zvuk.Width" Value="410"/>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="PhoneH">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="buttonRegistracija.Width" Value="70"/>
